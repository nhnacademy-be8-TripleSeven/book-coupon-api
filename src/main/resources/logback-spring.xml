<configuration>
    <!-- 공통 프로퍼티 -->
    <property name="APP_KEY" value="nMWnKdBvAFvUW8XL" />
    <property name="LOG_URL" value="https://api-logncrash.cloud.toast.com/v2/log" />

    <!-- 개발 환경 (dev) -->
    <springProfile name="hs">
        <!-- 콘솔 Appender -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- 루트 로거: 개발 환경에서는 콘솔 출력만 활성화 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
        </root>
    </springProfile>


    <!-- 인스턴스1 환경 -->
    <springProfile name="instance1">
        <!-- 콘솔 Appender -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- NHN Log & Crash Appender -->
        <appender name="NHN_LOG_CRASH_APPENDER" class="com.nhnacademy.bookapi.logback.LogCrashHttpAppender">
            <appKey>${APP_KEY}</appKey>
            <url>${LOG_URL}</url>
            <logSource>BookAPI-Instance1</logSource>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
        </appender>

        <!-- Logstash -->
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>115.94.72.197:50000</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        </appender>

        <!-- 루트 로거: INFO 이상을 콘솔 및 NHN으로 출력 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="LOGSTASH" />
            <appender-ref ref="NHN_LOG_CRASH_APPENDER" />
        </root>
    </springProfile>


    <!-- 인스턴스2 환경 -->
    <springProfile name="instance2">
        <!-- 콘솔 Appender -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- NHN Log & Crash Appender -->
        <appender name="NHN_LOG_CRASH_APPENDER" class="com.nhnacademy.bookapi.logback.LogCrashHttpAppender">
            <appKey>${APP_KEY}</appKey>
            <url>${LOG_URL}</url>
            <logSource>BookAPI-Instance2</logSource>
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>ERROR</level>
            </filter>
        </appender>

        <!-- Logstash -->
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>115.94.72.197:50000</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        </appender>

        <!-- 루트 로거: INFO 이상을 콘솔 및 NHN으로 출력 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="LOGSTASH" />
            <appender-ref ref="NHN_LOG_CRASH_APPENDER" />
        </root>
    </springProfile>
</configuration>
